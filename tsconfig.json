{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "downlevelIteration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "jsx": "react"
    },
    "include": [
        "src/**/*",
        "forge.config.ts",
        "webpack.*.*"
    ],
}
